<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="Thêm sách mới"
        android:background="@color/purple_200"
        android:textSize="25sp"
        android:gravity="center"
        android:textColor="#FFF"
        android:id="@+id/tvthemsach"
        />
    <TextView
        android:id="@+id/nhapten"
        android:layout_below="@+id/tvthemsach"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nhập tên sách"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/rounded"
        android:gravity="center"
        android:id="@+id/txtName"
        android:layout_below="@+id/nhapten"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nhập tên tác Giả"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:id="@+id/tentg"
        android:layout_below="@+id/txtName"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/rounded"
        android:gravity="center"
        android:id="@+id/txtTacgia"
        android:layout_below="@+id/tentg"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nhập link hình ảnh"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:id="@+id/nhaphinh"
        android:layout_below="@+id/txtTacgia"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/rounded"
        android:gravity="center"
        android:id="@+id/txtHinh"
        android:layout_below="@+id/nhaphinh"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnAdd"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtHinh"
        android:layout_alignParentRight="true"
        android:layout_marginTop="25dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/rounded_btn"
        android:drawableStart="@drawable/add"
        android:gravity="center"
        android:text="Thêm Sách"
        android:textAllCaps="false"
        android:textSize="21dp"

        />



</RelativeLayout>